# 
# bspwm keybindings
# 

# Quit bspwm
super + shift + Escape
	bspc quit

# Reload bspwm
super + alt + r
	bspc wm -r

# Lock bspwm
super + ctrl + l
	dm-tool lock

#
# Windows management
#

# Close window
super + shift + q
	bspc node -c

# Change focus
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Swap windows
super + shift + {h,j,k,l}
	bspc node  -s {west, south,north,east}

# Send window to desktop
super + shift + {0-9}
	bspc node -d {0-9}

# Focus on desktop
super + {0-9}
	bspc desktop -f {0-9}

# Send window and focus desktop
super + ctrl + {0-9}
	~/.config/dotscripts/move-window-and-focus.sh {0-9}

# Toggle floating
super + o
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

super + f
	~/.config/dotscripts/toggle-fullscreen.sh

# Rotate windows
super + r
	bspc node @/ --rotate 90

super + shift + r
	bspc node @/ --rotate 270

# Monocle layout
super + m
	bspc desktop -l next

# Swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# Resize a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Resize a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# Apps keybindings
#

super + ctrl + m 
	"$HOME"/.config/dotscripts/multimonitor.sh

# Reload sxhkd configs
super + Escape
	pkill -USR1 -x sxhkd

# Open app launcher
super + d
	dmenu_run

# Open a terminal
super + Return
	kitty

# Toggle picom
super + p
	~/.config/dotscripts/toggle-program.sh "picom" "-b"

# Launch applications
super + {F1,F2,F3}
	{firefox,telegram-desktop,pcmanfm}

super + {F10}
	~/.config/dotscripts/toggle-wifi.sh

# Take a screenshot
super + {_,shift} + Print
	flameshot {gui,screen -c}

# Media controls
XF86AudioRaiseVolume
	pulsemixer --change-volume +2 --max-volume 100

XF86AudioLowerVolume
	pulsemixer --change-volume -2

XF86AudioMute
	pulsemixer --toggle-mute

# Mic Mute
shift + XF86AudioMute
	pulsemixer --id source-1 --toggle-mute

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

XF86MonBrightnessUp
	~/.config/dotscripts/brightness.sh increase

XF86MonBrightnessDown
	~/.config/dotscripts/brightness.sh decrease

