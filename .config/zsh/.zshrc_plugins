# Install ZPM
if [[ ! -f ~/.config/zpm/zpm.zsh ]]; then
  git clone --recursive https://github.com/zpm-zsh/zpm ~/.config/zpm
fi
# Make sure ZPM's cache directory has been created
[ -d /tmp/zsh-1000/ ] && rm -rf /tmp/zsh-1000/*
source ~/.config/zpm/zpm.zsh

zpm load romkatv/powerlevel10k
zpm load zsh-users/zsh-syntax-highlighting 
