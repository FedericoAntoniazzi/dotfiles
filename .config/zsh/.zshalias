# Editor
alias vim=nvim

# ZSH
alias zshconfig="nvim ~/.config/zsh/.zshrc"
alias zshfunctions="nvim ~/.config/zsh/custom-functions.sh"
alias zshalias="nvim ~/.config/zsh/.zshalias"
alias zshenv="nvim ~/.config/zsh/.zshenv"

# SSH
alias ssh="kitty +kitten ssh"

# Syntactic sugar for ls
alias ls="lsd"
alias l="lsd -lh"
alias ll="lsd -lah"
alias lls="lsd -Slah"
alias llsr="lsd -Slahr"

# Shortcuts for tree
alias tree="lsd --tree"
alias tree1="lsd --tree --depth 1"
alias tree2="lsd --tree --depth 2"
alias tree3="lsd --tree --depth 3"
alias tree4="lsd --tree --depth 4"

# Copy
# Confirm before overwriting something
alias cp="cp -i"
alias mv="mv -i"

# Golang
alias gosrc="cd $GOPATH/src/"

# Python
alias py="python"
alias pipsh="pipenv shell"

# Git
alias ga="git add"
alias gc="git commit"
alias gcm="git commit --amend"
alias gd="git diff"
alias gds="git diff --staged"
alias gs="git status"
alias gl="git log"
alias glg="git log --graph"
alias glo="git log --oneline"
alias gck="git checkout"
alias gckb="git checkout -b"
alias gp="git push"
alias gpo="git push origin"

# Docker
alias d="docker"
alias dcl="docker container ls"
alias dvl="docker volume ls"
alias dil="docker image ls"
alias dnl="docker network ls"
alias dc="docker-compose"

# Kubernetes
alias k="kubectl"
alias ka="kubectl apply"
alias kaf="kubectl apply -f"
alias kg="kubectl get"
alias kgp="kubectl get pods"
alias kgs="kubectl get services"
alias kgd="kubectl get deployments"
alias kd="kubectl describe"
alias kdp="kubectl describe pod"
alias kdd="kubectl describe deployment"

alias kctx="kubectx"
alias kns="kubens"

# Vagrant
alias vg="vagrant"
alias vgu="vagrant up"
alias vgd="vagrant destroy"
alias vgssh="TERM='xterm-256color' vagrant ssh"

# Termbin
alias termbin="nc termbin.com 9999"

# Terraform
alias tf="terraform"
